generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?  // Optional: null for OAuth users, required for local auth
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
